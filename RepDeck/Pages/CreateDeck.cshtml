@page
@model RepDeck.CreateDeckModel
@{
    ViewData["Title"] = "CreateDeck";
}
<div class="text-center vibe">
    <h1>Create A New Deck</h1>
</div>
<form method="post">
    <div class="input-group">
        <div class="btn-group-sm">
