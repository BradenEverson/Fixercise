                <input type="radio" asp-for="muscleGroups" value="bodypart.php?id=2&exercises=Biceps" style="margin:2%" /> Biceps
                <input type="radio" asp-for="muscleGroups" value="bodypart.php?id=3&exercises=Chest" style="margin:2%" /> Chest
                <input type="radio" asp-for="muscleGroups" value="bodypart.php?id=4&exercises=Forearm" style="margin:2%" /> Forearm
                <input type="radio" asp-for="muscleGroups" value="bodypart.php?id=5&exercises=Glutes" style="margin:2%" /> Glutes
                <input type="radio" asp-for="muscleGroups" value="bodypart.php?id=6&exercises=Shoulders" style="margin:2%" /> Shoulders
                <input type="radio" asp-for="muscleGroups" value="bodypart.php?id=7&exercises=Triceps" style="margin:2%" /> Triceps
                <input type="radio" asp-for="muscleGroups" value="bodypart.php?id=8&exercises=Upper-Legs" style="margin:2%" /> Upper Legs
                <input type="radio" asp-for="muscleGroups" value="bodypart.php?id=9&exercises=Lower-Legs" style="margin:2%" /> Lower Legs
        </div>
            <div class="btn-group-sm"style="width:50%">
